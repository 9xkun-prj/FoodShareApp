<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wrap"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
	
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
	<LinearLayout
	    android:id="@+id/layoutSearch" 
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="45dp"
	    android:layout_marginTop="20dp"
	    android:layout_centerHorizontal="true">
	    <View android:layout_width="0dp" android:layout_weight="1.5"
	        android:layout_height="fill_parent"/>
	    <RelativeLayout android:layout_width="0dp"
	        android:layout_weight="7"
	        android:layout_height="fill_parent"
	        android:background="@drawable/box_search"
	        >
	        <EditText android:id="@+id/txtSearch"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:paddingRight="50dp"
	        android:paddingLeft="5dp"
	        android:hint="@string/txtSearch"
	        android:background="@null"
	        android:textSize="14sp"
	        android:singleLine="true"
	        android:drawablePadding="10dp"
	        android:drawableLeft="@drawable/abc_ic_search_api_holo_light"/>

	        <ImageButton
	            android:id="@+id/btnVoice"
	            android:layout_width="45dp"
	            android:layout_height="fill_parent"
	            android:layout_alignParentRight="true"
	            android:layout_alignParentTop="true"
	            android:layout_marginLeft="46dp"
	            android:background="@null"
	            android:contentDescription="@string/app_name"
	            android:onClick="VoiceCall"
	            android:src="@drawable/abc_ic_voice_search_api_holo_light" />
	    </RelativeLayout>
	    <View android:layout_width="0dp" android:layout_weight="1.5"
	        android:layout_height="fill_parent"/>
	</LinearLayout>
</RelativeLayout>
